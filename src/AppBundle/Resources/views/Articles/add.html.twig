{% extends "base.html.twig" %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
<h1 class="text-center mt-5">Page des articles</h1>

<div class="container m-5">

    {{form_start(form, {'attr': {'class': 'w-50 m-5', novalidate:'novalidate'}})}}
    
    <div class="mb-3">
      {{form_label(form.nom)}}
      {{form_widget(form.nom)}}
    </div>
    <div class="text-danger">{{form_errors(form.nom)}}</div>
    
    <div class="mb-3">
      {{form_label(form.qte)}}
      {{form_widget(form.qte)}}
    </div>
    <div class="text-danger">{{form_errors(form.qte)}}</div>
    
    <div class="mb-3">
      {{form_label(form.description)}}
      {{form_widget(form.description)}}
      
    </div>
    <div class="text-danger">{{form_errors(form.description)}}</div>
    
    <div class="mb-3">
      {{form_label(form.email)}}
      {{form_widget(form.email)}}
    </div>
    <div class="text-danger">{{form_errors(form.email)}}</div>
    
    {{form_end(form)}}

</div>



{% endblock %}
